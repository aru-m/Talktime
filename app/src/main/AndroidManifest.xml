<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.talktime">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/chat_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/chat_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.talktime">
        <activity
            android:name="com.example.talktime.SettingsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.talktime.ChatDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.talktime.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.talktime.SignInActivity"
            android:exported="true" />
        <activity
            android:name="com.example.talktime.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.example.talktime.MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>